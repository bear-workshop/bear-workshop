---
import MainLayout from '../layouts/MainLayout.astro';

const base = import.meta.env.BASE_URL;

const sponsors = [
    {
        label: 'ADVISOR',
        description: '...',
        icon: `${base}/advisor-icon.jpg`
    },
    {
        label: 'Age-It',
        description: '...',
        icon: `${base}/ageit-icon.png`
    },
    {
        label: 'FAIR',
        description: '...',
        icon: `${base}/fair-icon.svg`
    },
    {
        label: 'Fit4MedRob',
        description: '...',
        icon: `${base}/fit4med-icon.png`
    }
];
---

<MainLayout title="Sponsors of the Workshop">
    <header class="bg-blue-600 text-white py-12">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl font-bold">Sponsors of the Workshop</h1>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <section class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Sponsors</h2>
                <div class="grid grid-cols-1 gap-6">
                    {sponsors.map(sp => (
                            <div class="bg-white rounded-lg shadow-md p-6 flex items-start gap-4">
                                <img
                                        src={sp.icon}
                                        alt={`${sp.label} logo`}
                                        class="w-16 h-16 object-contain shrink-0"
                                />
                                <div>
                                    <h3 class="font-bold text-lg mb-1">{sp.label}</h3>
                                    <p class="text-gray-600 text-sm">{sp.description}</p>
                                </div>
                            </div>
                    ))}
                </div>
            </section>
        </div>
    </main>
</MainLayout>
