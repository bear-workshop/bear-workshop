---
import MainLayout from '../layouts/MainLayout.astro';

const sponsors = [
    {
        label: 'ADVISOR',
        description: '(MUR)ADVISOR project founded by Italian MUR and EU under the PRIN PNRR 2022 PE6 - Cod. P202277EJ2.',
        icon: '/public/advisor-icon.jpg'
    },
    {
        label: 'Age-It',
        description: 'Ministry of the University and Research under the Piano Nazionale per gli Investimenti Complementary PNC-PNRR “A novel public-private alliance to generate socioeconomic, biomedical and technological solutions for an inclusive Italian ageing society” (Age-IT Project), CUP: B83C22004800006',
        icon: '/public/ageit-icon.png'
    },
    {
        label: 'FAIR',
        description: 'FAIR project (PE0000013) funded by the Italian Ministry for Universities and Research',
        icon: '/public/fair-icon.svg'
    },
    {
        label: 'Fit4MedRob',
        description: 'Ministry of the University and Research under the Piano Nazionale per gli Investimenti Complementary PNC-PNRR Fit for Medical Robotics (Fit4MedRob), CUP: B53C22006950001.',
        icon: '/public/fit4med-icon.png'
    }
];
---

<MainLayout title="Sponsors of the Workshop">
    <header class="bg-blue-600 text-white py-12">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl font-bold">Sponsors of the Workshop</h1>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <section class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Sponsors</h2>
                <div class="grid grid-cols-1 md:grid-cols-1 gap-6">
                    {sponsors.map(sp => (
                    <div class="bg-white rounded-lg shadow-md p-6">
                        <h3 class="font-bold text-lg mb-1">{sp.label}</h3>
                        <div class="grid grid-cols-2 md:grid-cols-md">
                            <img src={sp.icon} alt={sp.label} />
                            <p class="text-gray-600">{sp.description}</p>
                        </div>

                    </div>
                    ))}
                </div>
            </section>

        </div>
    </main>
</MainLayout>