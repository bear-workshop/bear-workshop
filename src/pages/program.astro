---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Workshop Program">
    <header class="bg-blue-600 text-white py-12">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl font-bold">Workshop Program</h1>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto">
            <section class="mb-12">
                <h2 class="text-2xl font-bold mb-6">Schedule</h2>
                <div class="prose prose-lg">

                    <!-- Placeholder for the program schedule -->
                    <div class="bg-white rounded-lg shadow-md p-6 mt-8">
                        <p class="text-gray-600 text-center">
                            Program details will be available closer to the event date.
                        </p>
                    </div>

                </div>
            </section>

        </div>
    </main>
</MainLayout>